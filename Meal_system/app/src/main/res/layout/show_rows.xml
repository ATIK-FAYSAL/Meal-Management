<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/txt_breakfast"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/txt_name"
        android:layout_alignBottom="@+id/txt_name"
        android:layout_toRightOf="@+id/txt_name"
        android:layout_toEndOf="@+id/txt_name"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp" />

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="12dp" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/txt_date"
        android:layout_alignBottom="@+id/txt_date"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/txt_date"
        android:layout_toRightOf="@+id/txt_date" />

    <TextView
        android:id="@+id/txt_lunch"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/txt_breakfast"
        android:layout_alignBottom="@+id/txt_breakfast"
        android:layout_toRightOf="@+id/txt_breakfast"
        android:layout_toEndOf="@+id/txt_breakfast"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <TextView
        android:id="@+id/txt_dinner"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/txt_lunch"
        android:layout_alignBottom="@+id/txt_lunch"
        android:layout_toRightOf="@+id/txt_lunch"
        android:layout_toEndOf="@+id/txt_lunch"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

</RelativeLayout>
