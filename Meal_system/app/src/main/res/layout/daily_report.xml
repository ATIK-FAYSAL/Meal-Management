<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/app_background"
    android:layout_height="match_parent">
    
    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"></include>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:id="@+id/relativeLayout5"
        android:background="#03A9F4"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView22"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:textColor="#000"
            android:layout_alignLeft="@+id/textView18"
            android:layout_alignStart="@+id/textView18"
            android:layout_below="@+id/t_breakfast"
            android:layout_marginTop="10dp"
            android:text="Total Lunch : "
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t_breakfast"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:background="#E0E0E0"
            android:textColor="#000"
            android:layout_alignTop="@+id/textView18"
            android:layout_toRightOf="@+id/textView18"
            android:layout_toEndOf="@+id/textView18" />

        <TextView
            android:id="@+id/textView18"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_marginLeft="76dp"
            android:layout_marginStart="76dp"
            android:textColor="#000"
            android:layout_marginTop="66dp"
            android:text="Total Breakfast : "
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/date_txt"
            android:layout_width="120dp"
            android:layout_height="20dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/textView11"
            android:layout_alignStart="@+id/textView11"
            android:layout_marginLeft="46dp"
            android:layout_marginStart="46dp" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:textColor="#000"
            android:text="Total Meal : "
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_below="@+id/date_txt"
            android:layout_alignLeft="@+id/textView18"
            android:layout_alignStart="@+id/textView18"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/t_meal"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:textColor="#000"
            android:background="#E0E0E0"
            android:layout_alignBaseline="@+id/textView11"
            android:layout_alignBottom="@+id/textView11"
            android:layout_alignLeft="@+id/t_breakfast"
            android:layout_alignStart="@+id/t_breakfast" />

        <TextView
            android:id="@+id/textView23"
            android:layout_width="100dp"
            android:textColor="#000"
            android:layout_height="25dp"
            android:text="Total Dinner:"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/textView22"
            android:layout_alignLeft="@+id/textView22"
            android:layout_alignStart="@+id/textView22" />

        <TextView
            android:id="@+id/t_dinner"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:background="#E0E0E0"
            android:textColor="#000"
            android:layout_alignTop="@+id/textView23"
            android:layout_alignLeft="@+id/t_breakfast"
            android:layout_alignStart="@+id/t_breakfast" />

        <TextView
            android:id="@+id/t_lunch"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:background="#E0E0E0"
            android:textColor="#000"
            android:layout_alignTop="@+id/textView22"
            android:layout_alignLeft="@+id/t_breakfast"
            android:layout_alignStart="@+id/t_breakfast" />

    </RelativeLayout>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="3dp"
        android:divider="@color/colorPrimary"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/relativeLayout5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="12dp"
        android:textColor="#000"
        android:textSize="17dp"
        android:textStyle="bold"
        android:text="Date"
        android:layout_below="@+id/relativeLayout5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="71dp"
        android:layout_marginStart="71dp"
        android:text="Name"
        android:textColor="#000"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="17dp"
        android:textStyle="bold"
        android:layout_marginEnd="58dp"
        android:layout_marginRight="58dp"
        android:text="Total Meal"
        android:layout_alignBaseline="@+id/textView14"
        android:layout_alignBottom="@+id/textView14"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
