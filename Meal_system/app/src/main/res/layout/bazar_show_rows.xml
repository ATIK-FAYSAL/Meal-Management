<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:layout_alignBaseline="@+id/txt_date"
        android:layout_alignBottom="@+id/txt_date"
        android:layout_toRightOf="@+id/txt_date"
        android:layout_toEndOf="@+id/txt_date"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />

    <TextView
        android:id="@+id/txt_taka"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/txt_name"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp"
        android:layout_toEndOf="@+id/txt_name"
        android:layout_toRightOf="@+id/txt_name" />
</RelativeLayout>
