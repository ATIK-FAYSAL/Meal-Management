<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Spinner
        android:id="@+id/s_month"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:layout_weight="1" />

    <Spinner
        android:id="@+id/s_year"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/s_month"
        android:layout_alignLeft="@+id/s_month"
        android:layout_alignStart="@+id/s_month" />

    <Button
        android:id="@+id/save"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/log_in_button"
        android:text="Show Report"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_below="@+id/s_year"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
